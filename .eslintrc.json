{
    "env": {
        "browser": true,
        "es6": true
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "./webpack/webpack.config.js"
            }
        }
    },
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "no-underscore-dangle": "off",
        "import/no-dynamic-require": "off",
        "global-require": "off",
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ]
    }
}